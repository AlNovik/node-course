extends layout

block content

    form
        h1 Registration Form

        .form-group
            label(for="name") Name
            input.form-control(type="text" id="name" name="name" required autofocus)
        .form-group
            label(for="email") Email
            input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required)
        .form-group
            label(for="password") Password
            input.form-control(type="password" id="password" name="password" required)

        button.btn.btn-lg.btn-primary.btn-block(type="submit") Registration

script
